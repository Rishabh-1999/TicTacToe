<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorBackground"
        android:layout_height="match_parent"
        tools:context=".onePlayerActivity">

    <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            tools:text=""
            android:gravity="center"
            android:id="@+id/text_view_result_oneplayer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:fontFamily="casual"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_view_result_oneplayer"
            android:id="@+id/linearLayout2">
        <TextView
                android:text="Computor : 0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25sp"
                android:id="@+id/tvcomp"/>
        <TextView
                android:text="Player : 0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25sp"
                android:id="@+id/tvplayer"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
        <GridLayout
                android:padding="16dp"
                android:alignmentMode="alignBounds"
                android:useDefaultMargins="true"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:rowCount="3"
                android:layout_gravity="center"
                android:columnCount="3"
                android:id="@+id/layout_board_oneplayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp"
            android:id="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <Button
                android:id="@+id/button_restart_oneplayer"
                android:textAllCaps="false"
                android:text="Restart"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_width="20dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
        />
        <Button
                android:text="Exit"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_exit"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:layout_weight="1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>